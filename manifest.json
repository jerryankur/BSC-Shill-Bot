{
  "manifest_version": 2,
  "name"            : "BSC Shill bot",
  "short_name"      : "BSC Shill bot",
  "description"     : "BSC Shill bot",
  "version"         : "1.2",
  "browser_action"  : {
    "default_icon" : "icon72.png",
    "default_title": "BSC Shill bot"
  },

  "permissions"            : [
    "tabs", "http://*/*", "https://*/*", "activeTab", "storage", "webNavigation"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons"                  : {
    "16" : "icon16.png",
    "48" : "icon48.png",
    "128": "icon128.png"
  },
  "options_page"           : "options.html",
  "background"             : {
    "scripts"   : ["js/background.js"],
    "persistent": false
  }
}
